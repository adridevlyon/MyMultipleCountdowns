<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:padding="5dp">

    <TextView
        android:id="@+id/countdown_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="32%" />

    <TextView
        android:id="@+id/countdown_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/countdown_label"
        android:gravity="center"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="25%" />

    <TextView
        android:id="@+id/countdown_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/countdown_delay"
        android:gravity="center"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/countdown_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/countdown_duration"
        android:adjustViewBounds="true"
        android:src="@drawable/edit"
        app:layout_marginRightPercent="1%"
        app:layout_widthPercent="5%" />

    <ImageView
        android:id="@+id/countdown_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/countdown_edit"
        android:adjustViewBounds="true"
        android:src="@drawable/cancel"
        app:layout_marginLeftPercent="1%"
        app:layout_widthPercent="5%" />

</android.support.percent.PercentRelativeLayout>